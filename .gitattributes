# Normalize text files for cross-platform compatibility
* text=auto

# Treat these as binary (no diffing, no EOL normalization)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary

# Code files
*.py text eol=lf linguist-language=Python
*.ts text eol=lf linguist-language=TypeScript
*.tsx text eol=lf linguist-language=TypeScript
*.js text eol=lf linguist-language=JavaScript
*.php text eol=lf linguist-language=PHP
*.sh text eol=lf linguist-language=Shell

# Mark build and vendored directories so they don't count toward stats
build/** linguist-generated
dist/** linguist-generated
node_modules/** linguist-vendored
public/** linguist-generated
static/** linguist-generated
docs/** linguist-documentation

# Markdown files are documentation
*.md linguist-documentation

# CI / DevOps stuff
*.yml text eol=lf
*.yaml text eol=lf
Dockerfile text eol=lf
.env text eol=lf
